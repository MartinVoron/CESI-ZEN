# Development Environment Variables for CesiZen Backend
# Copy this to .env.dev and modify as needed
# DO NOT USE IN PRODUCTION

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# Database Configuration
MONGO_URI=mongodb://admin:admin123@mongo:27017/cesizen_db?authSource=admin
DB_NAME=cesizen_db

# JWT Configuration
JWT_SECRET=cesizen-jwt-secret-dev-2024-change-in-production
SECRET_KEY=cesizen-secret-key-dev-2024-change-in-production
