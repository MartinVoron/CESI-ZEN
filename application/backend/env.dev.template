# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://frontend:5173

# Security Headers (development settings)
SECURITY_HEADERS_ENABLED=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true 