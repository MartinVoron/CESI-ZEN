# ==========================================
# CESIZEN - DOCKER ENVIRONMENT CONFIGURATION
# ==========================================
# Configuration pour l'environnement de développement Docker
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# ==========================================
# GÉNÉRAL
# ==========================================
COMPOSE_PROJECT_NAME=cesizen
COMPOSE_FILE=docker-compose.yml

# ==========================================
# MONGODB CONFIGURATION
# ==========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=cesizen-dev-password-change-me
MONGO_DB_NAME=CesiZen
MONGO_PORT=27017

# ==========================================
# BACKEND CONFIGURATION
# ==========================================
BACKEND_PORT=5000
SECRET_KEY=cesizen-dev-secret-key-change-in-production-make-it-very-long-and-secure
JWT_EXPIRATION_DELTA=86400

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
FRONTEND_PORT=5173
FRONTEND_PREVIEW_PORT=4173

# ==========================================
# OPTIONAL SERVICES
# ==========================================

# Mongo Express
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=cesizen-admin

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=cesizen-redis-password

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Mettre à true pour activer le mode debug étendu
DEBUG_MODE=true

# Activer les profils optionnels (comma-separated)
# Valeurs possibles: tools, cache, proxy
# COMPOSE_PROFILES=tools

# ==========================================
# VOLUMES CONFIGURATION
# ==========================================
# Répertoires locaux pour les volumes (optionnel)
# MONGODB_DATA_PATH=./docker/data/mongodb
# BACKEND_LOGS_PATH=./docker/logs/backend
# BACKEND_UPLOADS_PATH=./docker/uploads

# ==========================================
# NETWORK CONFIGURATION
# ==========================================
# Subnet pour le réseau Docker (optionnel)
DOCKER_SUBNET=172.20.0.0/16

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================
# Limite mémoire pour les conteneurs (optionnel)
BACKEND_MEMORY_LIMIT=512m
FRONTEND_MEMORY_LIMIT=1g
MONGODB_MEMORY_LIMIT=1g

# CPU limits (optionnel)
BACKEND_CPU_LIMIT=0.5
FRONTEND_CPU_LIMIT=1.0
MONGODB_CPU_LIMIT=1.0 